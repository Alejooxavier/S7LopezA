<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7LopezA.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Login" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />
            <Entry x:Name="txtPassword" Placeholder="Ingrese el password" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesion" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>